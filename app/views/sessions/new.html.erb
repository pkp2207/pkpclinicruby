<%= button_to 'Back to Home', root_path, method: :get, class: "btn btn-link" %>
<h1>Login</h1>

<%= form_with url: login_path, local: true do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit 'Login' %>
  </div>
<% end %>
